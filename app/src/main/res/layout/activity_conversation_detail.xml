<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/conversation_detail_title_bg"
        >
        <Button 
            android:id="@+id/bt_conversation_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:background="@drawable/selector_backbutton_bg"
            android:textColor="#FFFFFF"
            />
        <TextView 
            android:id="@+id/tv_conversation_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="李四"
            android:layout_centerInParent="true"
            android:textSize="21sp"
            android:textColor="@android:color/white"
            />
    </RelativeLayout>
	<ListView 
	    android:id="@+id/lv_conversation_detail_list"
	    android:layout_weight="1"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:background="@drawable/conversation_detail_content_bg"
	    android:divider="@null"
	    android:listSelector="@android:color/transparent"
	    android:cacheColorHint="@android:color/transparent"
	    ></ListView>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@drawable/conversation_detail_footer_bg"
	    android:gravity="center_vertical"
	    >
	    <EditText 
	        android:id="@+id/et_conversation_detail_body"
	        android:layout_weight="1"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:background="@drawable/selector_edittext_bg"
	        />
	    <Button 
	        android:id="@+id/bt_conversation_detail_send"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="发送"
	        android:background="@drawable/selector_button_bg"
	        android:textColor="@drawable/selector_button_textcolor"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        />
	</LinearLayout>
</LinearLayout>