<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <Button 
        android:id="@+id/bt_conversation_newmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新建信息"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_button_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@drawable/selector_button_textcolor"
        />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >
       <Button 
           android:id="@+id/bt_conversation_select_all"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="全选"
        android:background="@drawable/selector_button_bg"
        android:textColor="@drawable/selector_button_textcolor"
        android:visibility="gone"
        />
       <Button 
           android:id="@+id/bt_conversation_select_cancel"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="取消选择"
        android:background="@drawable/selector_button_bg"
        android:textColor="@drawable/selector_button_textcolor"
        android:visibility="gone"
        />
    </LinearLayout>
    <ListView 
        android:id="@+id/lv_conversation_list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        ></ListView>
    <Button 
        android:id="@+id/bt_conversation_deletemsg"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除信息"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_button_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@drawable/selector_button_textcolor"
        />
</LinearLayout>