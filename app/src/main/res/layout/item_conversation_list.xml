<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cb_conversation_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:button="@drawable/selector_checkbox_bg"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_conversation_list_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/cb_conversation_selected"
        android:scaleType="fitXY"
        android:src="@drawable/ic_unknow_contact_picture"
        />

    <TextView
        android:id="@+id/tv_conversation_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_conversation_list_photo"
        android:text="张三"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/tv_conversation_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="2014-09-17"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_conversation_list_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_conversation_list_photo"
        android:layout_toRightOf="@id/iv_conversation_list_photo"
        android:singleLine="true"
        android:text="这事内容oisahdfksahfkh"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"/>
</RelativeLayout>